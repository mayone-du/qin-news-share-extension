{
  "name": "Qinニュースシェア",
  "description": "Qinニュースシェアアプリの拡張機能です。",
  "manifest_version": 2,
  "version": "1.0.0",
  "icons": {
    "48": "icon_48.png"
  },
    "permissions": [
      "activeTab",
      "tabs",
      "background",
      "storage"
    ],
  "browser_action": {
    "default_icon": {
      "48": "icon48.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}